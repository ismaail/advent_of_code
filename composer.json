{
  "require": {
    "php": ">=5.5",
    "symfony/console": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "5.*"
  },
  "autoload": {
    "psr-4": {
      "Puzzle\\": "src"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --colors=always",
    "test-failing": "vendor/bin/phpunit --group=failing --colors=always",
    "test-report": "vendor/bin/phpunit --coverage-html=data/tests-report"
  }
}
